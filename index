    <script>
        function downloadPDF() {
            // Ocultar el botón de descarga temporalmente
            const btn = document.querySelector('.download-btn');
            btn.style.display = 'none';
            
            // Usar window.print() que permite guardar como PDF
            window.print();
            
            // Mostrar el botón nuevamente después de un momento
            setTimeout(() => {
                btn.style.display = 'block';
            }, 1000);
        }
        
        // Animación de entrada para los elementos
        window.addEventListener('load', () => {
            const elementos = document.querySelectorAll('.caracteristica, .estilo, .habilidad');
            elementos.forEach((el, index) => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    el.style.transition = 'all 0.5s ease';
                    el.style.opacity = '1';
                    el.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
